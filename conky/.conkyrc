--configuration file of conky for the conky-i3bar script

conky.config = {

out_to_x = false ,
own_window = false ,
out_to_console = true , 

update_interval = 1 ,
total_run_times = 0 ,
short_units = true ,
if_up_strictness = "address" , 
use_spacer = "left" ,
cpu_avg_samples = 2, 

color0 = 'ffffff' ,
color1 = 'C90000'

}



conky.text = [[
[{"full_text":"${font FontAwesome} $font${downspeed enp1s0} ${font FontAwesome} $font${upspeed enp1s0}","color":"\#00ff15"},
