 {"full_text":"/root ${fs_free /} Free","color":"\#ff4d00"},
 {"full_text":"Cpu1 ${cpu cpu1} %","color":"\#ff0000"},
 {"full_text":"Cpu2 ${cpu cpu2} %","color":"\#ff0000"},
 {"full_text":"Cpu3 ${cpu cpu3} %","color":"\#ff0000"},
 {"full_text":"Cpu4 ${cpu cpu4} %","color":"\#ff0000"},
 {"full_text":"Ram:${mem}/${memmax} $memperc %","color":"\#00fff2"},
 {"full_text":"${time %H:%M|%d-%m-%Y}","color":"\#ffffff"},
 {"full_text":"${font FontAwesome} ${font}$battery $battery_time","color":"\#c9ff00"}],
]]
